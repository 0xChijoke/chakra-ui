{
  "name": "@chakra-ui/checkbox",
  "version": "1.5.8",
  "description": "A React Checkbox component for use in forms",
  "keywords": [
    "react",
    "checkbox",
    "custom-checkbox",
    "checkbox-hook",
    "react hook",
    "input",
    "chakra-ui",
    "use-checkbox",
    "checkboxGroup",
    "checkbox-group-hook",
    "use-checbox-group"
  ],
  "author": "Segun Adebayo <sage@adebayosegun.com>",
  "homepage": "https://github.com/chakra-ui/chakra-ui#readme",
  "license": "MIT",
  "type": "module",
  "source": "src/index.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chakra-ui/chakra-ui.git",
    "directory": "packages/checkbox"
  },
  "bugs": {
    "url": "https://github.com/chakra-ui/chakra-ui/issues"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "microbundle watch --format modern",
    "build": "microbundle --jsx React.createElement --format modern,esm,cjs",
    "test": "jest --env=jsdom --passWithNoTests",
    "lint": "concurrently yarn:lint:*",
    "version": "yarn build",
    "test:cov": "yarn test --coverage",
    "lint:src": "eslint src --ext .ts,.tsx --config ../../.eslintrc",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@chakra-ui/hooks": "1.6.1",
    "@chakra-ui/react-utils": "1.1.2",
    "@chakra-ui/utils": "1.8.3",
    "@chakra-ui/visually-hidden": "1.0.15"
  },
  "devDependencies": {
    "@chakra-ui/system": "1.7.4",
    "framer-motion": "^4.0.0",
    "react": "^17.0.1"
  },
  "peerDependencies": {
    "@chakra-ui/system": ">=1.0.0",
    "framer-motion": "3.x || 4.x",
    "react": ">=16.8.6"
  }
}
